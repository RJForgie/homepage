{
  "name": "homepage",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.20.8"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint \"src/**/*.{js,ts,astro}\"",
    "format": "prettier --write .",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "new:post": "node scripts/new-content.js post",
    "new:list": "node scripts/new-content.js list",
    "db:pull": "bash scripts/db-pull.sh",
    "db:update": "pnpm db:pull && pnpm db:types",
    "db:types": "kysely-codegen --url=./data/prod.db --out-file=src/lib/db/types.ts --dialect=sqlite",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,mdx,css,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@tailwindcss/vite": "^4.0.6",
    "astro": "^5.11.0",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "kysely": "^0.28.10",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/typography": "^0.5.12",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.19.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
