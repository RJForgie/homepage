---
import BaseHead from "@components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION, AUTHOR } from "@consts";
import Link from "@components/Link.astro";
import "../styles/global.css";
import socialShareImage from "../images/social-share.png";

interface Props {
  title?: string;
  description?: string;
  type?: "website" | "article";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  type = "website",
  publishedTime,
  modifiedTime,
  author,
} = Astro.props;

const today = new Date();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={socialShareImage}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
    />
    <script is:inline defer src="https://assets.onedollarstats.com/stonks.js"
    ></script>
  </head>
  <body
    class="my-12 mx-auto px-6 max-w-3xl bg-zinc-900 text-zinc-300 text-base leading-6 font-light font-mono"
  >
    <!-- Skip to main content link for screen readers -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-zinc-800 text-zinc-50 px-4 py-2 rounded z-50"
    >
      Skip to main content
    </a>

    <slot name="header" />

    <main id="main-content" tabindex="-1">
      <slot />
    </main>

    <footer
      class="my-12 text-zinc-400"
      role="contentinfo"
      aria-label="Site footer"
    >
      <nav aria-label="Social links">
        <Link
          href={AUTHOR.linkedin}
          external
          variant="subtle"
          class="hover:text-zinc-50 transition-colors group"
          aria-label={`Visit ${AUTHOR.name}'s LinkedIn profile`}
        >
          <span class="group-hover:text-zinc-400 transition-colors">[</span
          >LinkedIn<span class="group-hover:text-zinc-400 transition-colors"
            >]</span
          >
        </Link>
      </nav>
      <p class="mt-2">
        &copy; {today.getFullYear()}
        {AUTHOR.name}. All rights reserved.
      </p>
    </footer>
  </body>
</html>
