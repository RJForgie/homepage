---
import BaseLayout from "./BaseLayout.astro";
import type { CollectionEntry } from "astro:content";
import ArticleMeta from "@components/ArticleMeta.astro";
import BackLink from "@components/BackLink.astro";

type Props = CollectionEntry<"field-notes" | "lists">["data"];

const { title, description, pubDate, updatedDate } = Astro.props;

// Format dates for meta tags
const publishedTime = pubDate.toISOString();
const modifiedTime = updatedDate ? updatedDate.toISOString() : publishedTime;
---

<BaseLayout
  title={title}
  description={description}
  type="article"
  publishedTime={publishedTime}
  modifiedTime={modifiedTime}
>
  <article itemscope itemtype="https://schema.org/Article">
    <header>
      <h1 class="text-zinc-50 text-base font-medium" itemprop="headline">
        {title}
      </h1>
      <ArticleMeta pubDate={pubDate} updatedDate={updatedDate} />
    </header>
    <div
      class="prose-invert prose-base prose-h2:text-base prose-h2:font-medium prose-a:underline prose-ol:list-decimal prose-ul:list-disc mt-12"
      itemprop="articleBody"
    >
      <slot />
    </div>
  </article>
  <nav class="mt-12" aria-label="Article navigation">
    <BackLink />
  </nav>
</BaseLayout>
