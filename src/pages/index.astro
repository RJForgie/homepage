---
import ContentList from "@components/ContentList.astro";
import Project from "@components/Project.astro";
import Header from "@components/Header.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout>
  <Header slot="header" />
  <ContentList collection="field-notes" />
  <ContentList collection="lists" />
  <section class="mt-14">
    <h2 class="text-zinc-50 font-medium mb-2 capitalize">Projects</h2>
    <ol class="list-decimal list-inside">
      <Project
        link="https://gravel.co.nz"
        title="Gravel bike race calendar for New Zealand"
      />
      <Project link="/projects/polya/" title="Heuristics for problem solving" />
    </ol>
  </section>
</BaseLayout>
