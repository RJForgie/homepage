---
import { type CollectionEntry, getCollection } from "astro:content";
import Post from "@layouts/Post.astro";

// Define the type outside since it's needed for Props
type ValidCollection = "journal" | "links" | "lists";

export async function getStaticPaths() {
  const collections = ["journal", "links", "lists"] as const;

  const allPaths = await Promise.all(
    collections.map(async (collection) => {
      const entries = await getCollection(collection);
      return entries.map((entry) => ({
        params: {
          slug: `${collection}/${entry.slug}`,
        },
        props: { entry },
      }));
    }),
  );

  return allPaths.flat();
}

type Props = {
  entry: CollectionEntry<ValidCollection>;
};

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Post {...entry.data}>
  <Content />
</Post>
