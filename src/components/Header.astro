---
import { AUTHOR } from "@consts";
import Link from "@components/Link.astro";
---

<header role="banner" aria-label="Site header" class="mb-12">
  <h1 class="text-zinc-50 text-base font-medium mb-3 flex items-center gap-3">
    <span>{AUTHOR.name}</span>
    <span class="spinner" aria-hidden="true"></span>
  </h1>

  <p class="text-zinc-400 mb-3">Product Engineering Manager</p>

  <p class="text-zinc-400 mb-6">ÅŒtautahi Christchurch, New Zealand</p>

  <div>
    <Link
      href={AUTHOR.linkedin}
      external
      variant="subtle"
      class="text-zinc-400 hover:text-zinc-50 transition-colors group"
      aria-label={`Visit ${AUTHOR.name}'s LinkedIn profile`}
    >
      <span class="text-zinc-600 group-hover:text-zinc-400 transition-colors"
        >[</span
      >LinkedIn<span
        class="text-zinc-600 group-hover:text-zinc-400 transition-colors"
        >]</span
      >
    </Link>
  </div>
</header>

<style>
  .spinner {
    display: inline-block;
    width: 0.875em;
    height: 0.875em;
    border: 2px solid transparent;
    border-top-color: rgb(250 250 250); /* zinc-50 */
    border-right-color: rgb(250 250 250); /* zinc-50 */
    border-bottom-color: rgb(250 250 250); /* zinc-50 */
    border-radius: 50%;
    animation: spin 1.5s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
