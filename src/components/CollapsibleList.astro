---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className = "" } = Astro.props;
---

<details class={className}>
  <summary
    class="cursor-pointer hover:text-zinc-50 transition-colors focus:outline-none focus:ring-2 focus:ring-zinc-400 focus:ring-offset-2 focus:ring-offset-zinc-900 rounded"
  >
    {title}
  </summary>
  <div class="mt-2">
    <slot />
  </div>
</details>
