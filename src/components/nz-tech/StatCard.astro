---
interface Props {
  label: string;
  value: string | number;
  sublabel?: string;
}

const { label, value, sublabel } = Astro.props;
---

<div class="border border-zinc-700 rounded-lg p-6">
  <p class="text-sm text-zinc-400 mb-1">{label}</p>
  <p class="text-2xl font-medium text-zinc-50">{value}</p>
  {sublabel && <p class="text-sm text-zinc-400 mt-1">{sublabel}</p>}
</div>
